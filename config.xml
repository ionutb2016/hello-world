<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.avantajc.updating"
        versionCode = "10"
        version     = "1.1.0">
 
    <name>Ava 001</name>
 
    <description>
        A simple updating app to keep track of the courses.
    </description>
 
    <author href="http://avantajconsulting.ro" email="office@avantajconsulting.ro">
        Avantaj Consulting App
    </author>
 
    
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 

    <plugin name="com.indigoway.cordova.whitelist.whitelistplugin" spec="1.1.1" source="pgb" />

    <allow-navigation href="http://scripting.work/api/*" />
    <allow-navigation href="http://code.jquery.com/*" />
    <allow-navigation href="https://cdnjs.cloudflare.com/*" />
    <access origin="*" />

    

    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />  
    <preference name="SplashScreenDelay" value="5000" /> 
    <preference name="ShowSplashScreenSpinner" value="false" />  
    <preference name="FadeSplashScreen" value="true" />  
    <preference name="FadeSplashScreenDuration" value="1.0" />  
    <preference name="SplashScreen" value="splash" />


    <splash src="splash.png" />



</widget>




